{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd build && cmake .. && make -j$TOTAL_PROCESSORS",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "cd build && make clean",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "cd build && cmake .. && make clean && make -j$TOTAL_PROCESSORS",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}